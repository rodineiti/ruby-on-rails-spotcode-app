<div class="column is-half-mobile is-one-quarter-desktop">
  <%= link_to album, class: "has-text-white" do %>
    <%= image_tag url_for(album.cover) %>
    <p class="is-size-6 has-text-weight-semibold"><%= album.title %></p>
    <p class="is-size-7"><%= album.artist.name %></p>
  <% end %>
  <div class="column is-2-mobile is-1-desktop is-pulled-right favorite">
      <%= favorite_button(album) %>
    </div>
</div>